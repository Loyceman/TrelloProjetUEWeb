{% extends "base.html.jinja2" %}

{% block head %}
    <title>Login</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/login.css') }}">
{% endblock %}


{% block content %}

    <section class="container-fluid section-login">

        <div class="layout-login">

            <h2 class="login-element">Login</h2>
            {% with messages = get_flashed_messages() %}
                {% if messages %}
                    <div class="alert alert-danger" role="alert">
                        {{ messages[0] }}
                    </div>
                {% endif %}
            {% endwith %}

            <form method="POST" action="/login" class="login-element">
                <div class="mb-3">
                    <span class="label">
                        <img class="icon" src="{{ url_for("static", filename="img/user-icon.svg") }}" alt="User"/>
                        <label for="username" class="">Username</label>
                    </span>
                    <input type="text" class="form-control" id="username"
                           aria-describedby="usernameHelp"
                           placeholder="Your username" name="username">
                </div>
                <div class="mb-3">
                    <span class="label">
                        <img class="icon" src="{{ url_for("static", filename="img/lock-icon.svg") }}" alt="Password">
                        <label for="password" class="">Password</label>
                    </span>
                    <input type="password" class="form-control" id="password"
                           placeholder="Your Password" name="password">
                </div>
                <div class="mb-3">
                    <div class="form-check m-1">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Remember me
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>

        </div>

        <div class="login-element layout-center">
            <span class="text-box">
                Don't have an account ?
            </span>
            <a class="text-box clickable" href="{{ url_for('register') }}">
                Register
            </a>
        </div>
    </section>

{% endblock %}